{
  "name": "discord-client",
  "private": true,
  "version": "0.1.0",
  "description": "Faizan Report Studio desktop app",
  "author": "Rayyan Shah",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron ./electron/main.js",
    "build": "npm run clean && npm run build:backend && npm run build:renderer && npm run build:electron",
    "clean": "node -e \"require('fs').rmSync('dist', { recursive: true, force: true })\"",
    "build:renderer": "vite build",
    "build:electron": "electron-builder",
    "build:backend": "powershell -ExecutionPolicy Bypass -File ..\\backend\\build_backend.ps1",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "dayjs": "^1.11.19",
    "electron-updater": "^6.6.2",
    "framer-motion": "^12.23.25",
    "fs-extra": "^11.3.2",
    "nunjucks": "^3.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.10.1",
    "wait-on": "^9.0.3",
    "xlsx": "^0.18.5",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^5.1.1",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "vite": "^7.2.4"
  },
  "build": {
    "appId": "com.faizanacademy.reportstudio",
    "productName": "Faizan Report Studio",
    "icon": "build/icon.png",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "extraResources": [
      {
        "from": "../config",
        "to": "config"
      },
      {
        "from": "../settings",
        "to": "settings"
      },
      {
        "from": "../templates",
        "to": "templates"
      },
      {
        "from": "../backend/dist/report-backend.exe",
        "to": "backend/report-backend.exe"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "artifactName": "Faizan-Report-Studio-Setup-${version}.${ext}",
    "publish": [
      {
        "provider": "github",
        "owner": "rayyanshah04",
        "repo": "Report-Card"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
